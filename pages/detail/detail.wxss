.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
  background-color: rgb(88, 157, 221);
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  font-size:33rpx;
  letter-spacing:1px;
}
.nav-word {
  margin-left: 210rpx;
  color: whitesmoke;
  font-weight: 700;
}
.nav .back {
  width: 33px;
  height: 33px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}

.back-icon {
  padding:6px;
  width:80rpx;
  height:80rpx;
  left:0;
  bottom:0;
  position:absolute;
  opacity:0.8;
}
.newsIcon{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  bottom: 0;
  left: 70rpx;
  padding: 10px 15px;
}

.detail-block {
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-top: 35rpx;
  align-items: center;
}

.detail-title {
  font-size: 48rpx;
  line-height: 67rpx;
  margin-bottom: 20rpx;
}

.detail-about {
  display: flex;
  align-items: center;
  font-size: 27rpx;
  line-height: 38rpx;
  opacity: 0.3;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.detail-from-time {
  display: flex;
}
.detail-from {
  margin-right: 30rpx;
  width: 200rpx;
}
.detail-read {
  flex-grow: 1;
  text-align: right;
}

.detail-image {
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  line-height: 42rpx;
  margin-bottom: 10rpx;
}
.image{
  width: 700rpx;
  justify-content: center;
  align-items: center;
}

.image-title {
  opacity: 0.5;
}

.body {
  font-size: 35rpx;
  line-height: 55rpx;
}

.body-strong-word {
  opacity: 0.8;
  font-weight: 700;
}

.body-word {
  opacity: 0.8;
}